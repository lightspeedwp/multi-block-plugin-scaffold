{
  "apiVersion": 3,
  "name": "{{namespace}}/{{block_slug}}-featured",
  "title": "{{Block Featured}}",
  "category": "widgets",
  "icon": "star-filled",
  "description": "A featured block for highlighting content.",
  "keywords": ["featured", "highlight", "{{block_slug}}", "callout", "hero"],
  "textdomain": "{{textdomain}}",
  "attributes": {
    "displayFeaturedImage": {
      "type": "boolean",
      "default": true
    },
    "displayTitle": {
      "type": "boolean",
      "default": true
    },
    "displayExcerpt": {
      "type": "boolean",
      "default": false
    },
    "displayMeta": {
      "type": "boolean",
      "default": false
    }
  },
  "supports": {
    "html": false,
    "align": ["wide", "full"],
    "anchor": true,
    "customClassName": true,
    "spacing": {
      "margin": true,
      "padding": true
    },
    "color": {
      "background": true,
      "text": true
    }
  },
  "example": {
    "attributes": {
      "displayFeaturedImage": true,
      "displayTitle": true,
      "displayExcerpt": true,
      "displayMeta": true
    }
  }
}
