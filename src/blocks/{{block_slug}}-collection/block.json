{
  "apiVersion": 3,
  "name": "{{namespace}}/{{block_slug}}-collection",
  "title": "{{Block Collection}}",
  "category": "widgets",
  "icon": "screenoptions",
  "description": "A collection block for displaying multiple items.",
  "keywords": ["collection", "list", "{{block_slug}}", "query", "posts"],
  "textdomain": "{{textdomain}}",
  "attributes": {
    "postsToShow": {
      "type": "number",
      "default": 6
    },
    "columns": {
      "type": "number",
      "default": 3
    },
    "displayFeaturedImage": {
      "type": "boolean",
      "default": true
    },
    "displayTitle": {
      "type": "boolean",
      "default": true
    },
    "displayExcerpt": {
      "type": "boolean",
      "default": false
    },
    "displayMeta": {
      "type": "boolean",
      "default": false
    }
  },
  "supports": {
    "html": false,
    "align": ["wide", "full"],
    "anchor": true,
    "customClassName": true,
    "spacing": {
      "margin": true,
      "padding": true
    },
    "color": {
      "background": true,
      "text": true
    }
  },
  "example": {
    "attributes": {
      "postsToShow": 3,
      "columns": 3,
      "displayFeaturedImage": true,
      "displayTitle": true,
      "displayExcerpt": true,
      "displayMeta": true
    }
  }
}
