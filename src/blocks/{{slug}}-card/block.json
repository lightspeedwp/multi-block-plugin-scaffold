{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "{{namespace}}/{{slug}}-card",
	"title": "{{name}} Card",
	"category": "{{slug}}",
	"icon": "id-alt",
	"description": "Display a single {{name_singular_lower}} in a card layout.",
	"version": "{{version}}",
	"textdomain": "{{textdomain}}",
	"keywords": [ "card", "{{slug}}", "post" ],
	"usesContext": [ "postId", "postType" ],
	"supports": {
		"html": false,
		"anchor": true,
		"align": [ "left", "center", "right", "wide" ],
		"className": true,
		"color": {
			"background": true,
			"text": true
		},
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"attributes": {
		"postId": {
			"type": "number"
		},
		"displayFeaturedImage": {
			"type": "boolean",
			"default": true
		},
		"displayTitle": {
			"type": "boolean",
			"default": true
		},
		"displayExcerpt": {
			"type": "boolean",
			"default": true
		},
		"displayMeta": {
			"type": "boolean",
			"default": true
		},
		"displaySubtitle": {
			"type": "boolean",
			"default": true
		},
		"linkToPost": {
			"type": "boolean",
			"default": true
		}
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./editor.css",
	"style": "file:./style.css",
	"render": "file:./render.php"
}
